<div class="col-xs-12">
    <div class="one-product-line">
        <div class="one-product-picture">
            <a href="{{ routing_service.url(product) }}" class="one-product-thumbnail to-hover">
                {% if product.mainAsset %}
                    <img src="{{ asset("uploads/originals/"~product.mainAsset.assetBasePath)|imagine_filter("product_400_400") }}"
                         alt="Photo {{ product }}"/>
                {% else %}
                    <img src="http://placehold.it/400x250/999999/E3E3E3" alt="Photo {{ product }}"/>
                {% endif %}
                <span class="on-hover"></span>
            </a>

        </div>
        <div class="one-product-content">
            <div class="one-product-title">
                <h2 class="one-product-title-title"><a href="{{ routing_service.url(product) }}"> {{ product }} </a>
                </h2>
                <div class="item-about">
                    {{ product.productShortDescription|slice(0,200) }}
                </div>
                {% if product.productPrice %}
                    <div class="one-product-price">
                        <div class="one-product-price-label">{% trans %}start from{% endtrans %}
                            <span class="one-product-price-number">{{ product.productPrice|my_price }}</span>
                        </div>
                    </div>
                {% endif %}
                <div class="clearfix"></div>

            </div>
            <div class="one-product-footer-item-content">
                <div class="properties">
                    {% if product.duration %}
                        <span class="duration" title="{% trans %}Duration{% endtrans %}">
                    <i class="fa fa-clock-o"></i>
                    <b>{{ product.duration|trans }}</b>
                </span>
                    {% endif %}
                    {% if product.private %}
                        <span class="private" title="{% trans %}Private{% endtrans %}">
                    <i class="fa fa-lock"></i>
                    <b>{% trans %}Private{% endtrans %}</b>
                </span>
                    {% endif %}

                    {% if product.difficulty %}
                        <span class="difficulty" title="{% trans %}Difficulty{% endtrans %}">
                    <i class="fa fa-heartbeat"></i>
                    <b>{{ product.difficulty|trans }}</b>
                </span>
                    {% endif %}
                    {% if product.maxPersons %}
                        <span class="max" title="{% trans %}Max persons{% endtrans %}">
                    <i class="fa fa-users"></i>
                    <b>{{ product.maxPersons }}</b>
                </span>
                    {% endif %}

                </div>
            </div>
            <div class="one-product-footer">
                <div class="one-product-actions">
                    <a href="{{ routing_service.url(product) }}" class="product-book"><i class="icon-cart"></i> {% trans %}DETAILS & BOOK{% endtrans %}</a>
                </div>
                <div class="clearfix"></div>
            </div>

        </div>

    </div>

</div>