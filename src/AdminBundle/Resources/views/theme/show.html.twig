{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <h1>Destionation</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Destionationid</th>
                <td>{{ theme.themeId }}</td>
            </tr>
            <tr>
                <th>Destionationname</th>
                <td>{{ theme.themeName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('theme_index') }}" class="btn btn-default">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('theme_edit', { 'id': theme.themeId }) }}" class="btn btn-primary">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
