{% extends '@App/base.html.twig' %}
{% if page is defined and page.meta %}
    {% block metas %}
        <title>{{ page.meta.metaTitle }}</title>
        <meta name="description" content="{{ page.meta.metaDescription }}">
        <meta name="keywords" content="{{ page.meta.metaKeywords }}">
        {{ page.meta.metaKeywords|raw }}
    {% endblock %}
{% endif %}
{% block hero %}
    <section class="agency-header">
        <div class="container">
            <h1>{% trans %}Agencies list{% endtrans %}</h1>
        </div>
    </section>
{% endblock %}
{% block body %}
    <section class="agencies-list">
        <div class="container">
            <h2 class="page-title">{% trans %}Agencies list{% endtrans %}</h2>
            <div class="row-agencies">
                {% for agency in agencies %}
                    <div class="one-agency">
                        <div class="one-agency-inner">
                            <a href="{{ routing_service.agencyUrl(agency) }}" class="img-name">
                                {% if agency.logo %}
                                    <img src="{{ asset('uploads/agencies/'~agency.logo)|imagine_filter('agency_400_300') }}"
                                         class="img-responsive" alt="{{ agency }}">
                                {% else %}
                                    <img src="{{ asset('uploads/agencies/no-logo.jpg')|imagine_filter('agency_400_300') }}"
                                         class="img-responsive" alt="{{ agency }}">
                                {% endif %}
                            </a>
                            <div class="agency-info">
                                <h3>
                                    <a href="{{ routing_service.agencyUrl(agency) }}">{{ agency }}</a>
                                    <span class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </span>
                                </h3>
                                <p>
                                    Une agence de voyage au Maroc qui vous offre des opportunit√©s de voyage originals, pour vous aider a mieux choisir vos destination nationnal et internationnal avec un bon prix. des offres de voyage et excursions partout dans le monde qui s'adaptent mieux a votre budget.
                                </p>
                                <div class="more-info">
                                    {% if agency.city %}
                                        <a href="#">{{ agency.city }}</a>
                                    {% endif %}
                                    <a href="{{ routing_service.agencyUrl(agency) }}">{{ agency.products.count }} {% trans %}Product(s){% endtrans %}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="agency-sign-in-btn">
            <a href="{{ url('agency_sign_in') }}" class="btn btn-primary">{% trans %}SignIn New Agency{% endtrans %}</a>
        </div>
    </section>
{% endblock %}

